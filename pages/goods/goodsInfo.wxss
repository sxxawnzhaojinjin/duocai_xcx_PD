/** 入库表格 **/
.table-box {
  width: 100%;
  background: #fff;
}

.table-title {
  width: 100%;
  height: 70rpx;
  line-height: 70rpx;
  display: flex;
  display: -webkit-flex;
  flex-direction: row;
  flex-wrap: wrap;
  border: 2rpx solid #999;

}

.table-list {
  width: 100%;
  height: 70rpx;
  line-height: 70rpx;
  display: flex;
  display: -webkit-flex;
  flex-direction: row;
  flex-wrap: wrap;
  border: 2rpx solid #999;
  border-top: none;
}

.table-title view,
.table-list view {
  width: 33.333%;
  text-align: center;
}

.table-title view:nth-child(2),
.table-list view:nth-child(2) {
  border: 2rpx solid #999;
  border-top: none;
  border-bottom: none;
}


