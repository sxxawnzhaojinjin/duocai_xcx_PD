/** 弹窗 **/
.popup-box {
  /*遮罩层*/
  /* display: none; */
  position: fixed;
  left: 0;
  top: 0;
  background-color: #000000;
  width: 100%;
  height: 100%;
  opacity: 0.5;
  overflow: hidden;
  z-index: 1000;
}

.popup {
  position: fixed;
  bottom: 0;
  margin: auto;
  height: 600rpx;
  width: 100%;
