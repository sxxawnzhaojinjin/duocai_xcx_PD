<!--pages/mine/changePassword.wxml-->
<view class="bg">
	<view class="item">
		<view  class="leftText">旧密码</view>
		<input maxlength="10" password="true" class="input" value="{{oldPassword}}" bindinput="editOldPassword" placeholder="请输入旧密码"></input>
	</view>
	<view class="item">
		<view  class="leftText">新密码</view>
		<input  maxlength="10" password="true" class="input" value="{{newPassword}}" bindinput="editNewPassword" placeholder="请输入新密码"></input>
	</view>

	<view class="item">
		<view class="leftText">确认新密码</view>
		<input  maxlength="10" password="true" class="input" value="{{againPassword}}" bindinput="editAgainPassword"  placeholder="请再次输入新密码"></input>
	</view>

  	<view class="button" bindtap="submit">
		确认修改
	</view>
</view>