/* pages/mine/index.wxss */
page{
  background-color: #f3f3f3;
}
.bg{
  display: flex;
flex-direction: column;
background-color: #f3f3f3;
}
.bg_image{
  width:100%;
  height: 250rpx;
  position: fixed;
  z-index: 1;
}
.header{
  z-index:2;
  height: 250rpx;
  display: flex;
  align-items: center;
}
.user{
  height: 150rpx;
  width: 150rpx;
  border-radius: 75rpx;
  margin-left: 22rpx;
  background-color: #f3f3f3;
  border-width: 3rpx;
}

.item{
  background-color: white;
  width: 100%;
  height: 100rpx;
  border-bottom: 3rpx solid;
  border-color: #EEE;
  display: flex;
  align-items: center;
  margin-top: 2rpx;
  z-index: 2;

}
.icon{
  height: 30rpx;
  width: 30rpx;
  margin-left: 22rpx;
  margin-right: 22rpx;
}
.text{
  margin-left: 12rpx;
  color: #333;
  flex:1;
  font-size: 28rpx;
}
.lab{
  margin-left: 12rpx;
  color: #FFF;
}

.button{
  font-size: 30rpx;
  bottom: 100rpx;
  position: fixed;
  background-color: #ec7259;
  width:80%;
  height: 80rpx;
  border-radius: 50rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  margin-left: 10%;
  margin-top: 100rpx;
  color: #FFF;
  bottom: 100rpx;
}