/* pages/back/backList.wxss */

.list_item {
  margin-top: 20rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
  background-color: #FFF;
  position: relative;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.item_content {
  padding: 20rpx;
}

.content_lable {
  padding-bottom: 10rpx;
}

.right_to {
  position: absolute;
  /* top: 50%;
   bottom: 50%; */
  right: 20rpx;
}

.pos_fixed {
  width: 100%;
  /* background: #1A50B2; */
  font-size: 30rpx;
  position: fixed;
  color: #FFF;
  left: 20rpx;
  right: 20rpx;
  bottom: 10px;
  text-align: center;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.pos_fixed>.lable {
  width: 50%;
  height: 60rpx;
  line-height: 60rpx;
  vertical-align: middle;
  background: #1A50B2;
  border-radius: 30px;
  padding-top: 10rpx;
  padding-right: 20rpx;
  padding-left: 20rpx;
  padding-bottom: 10rpx;
}


.list_bg{
  display: flex;
  background-color: #FFF;
  margin:10rpx 20rpx;
  flex-direction: column;
  padding:20rpx;
  border-radius: 10rpx;
  font-size: 28rpx;
}
.headr{
  display: flex;
  justify-content: space-between;
}
.detail{
  color:#333;
  font-size: 24rpx;

}
.content{
  display: flex;
  justify-content: flex-end;
  margin: 10rpx 0rpx;
  color:#333;
}
.upText{
  margin-left: 20rpx;
  color:#1A50B2;
  font-size: 30rpx;
}
.payType{
  color: #333;
}
.bottom{
  display: flex;
  height: 160rpx;
}