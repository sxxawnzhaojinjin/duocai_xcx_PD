/* pages/work/index.wxss */
page {
  /* background-color: #f3f3f3; */
  background-color: #FFF;

}

.bg {
  display: flex;
  flex-direction: column;
  /* background-color: #f3f3f3; */
}

.bg_image {
  width: 100%;
  height: 250rpx;
  position: fixed;
  z-index: 1;
}

.header {
  z-index: 2;
  height: 250rpx;
  display: flex;
  align-items: center;
}

.user {
  height: 150rpx;
  width: 150rpx;
  border-radius: 75rpx;
  margin-left: 22rpx;
  background-color: #f3f3f3;
  border-width: 3rpx;
}

.icon {
  height: 30rpx;
  width: 30rpx;
  margin-left: 22rpx;
  margin-right: 22rpx;
}

.lab {
  margin-left: 12rpx;
  color: #FFF;
}

.inventory_box{
  width: 100%;
  margin: 20rpx 0;
}

.inventory_title{
  height: 90rpx;
  line-height: 90rpx;
  font-size: 32rpx;
  border-bottom: 2rpx solid #999999;
  margin-left: 20rpx;
  color:#222;
}
.inventory_list{
  width: 100%;
  height: auto;
  display: flex;
  display: -webkit-flex;
  /* justify-content: space-between; */
  flex-direction: row;
  flex-wrap: wrap;
  padding: 20rpx 0;
}

.inventory_tab{
  width: 25%;
  text-align: center;
}

.inventory_tab .img{
  width: 50rpx;
  height: 50rpx;
  border-radius: 10rpx;
  vertical-align: middle;
  border: 2rpx solid #999;
  padding: 10rpx;
}
.inventory_tab .title{
  font-size: 28rpx;
  margin: 10rpx 0;
  color:#666;
  font-size: 24rpx;
}

