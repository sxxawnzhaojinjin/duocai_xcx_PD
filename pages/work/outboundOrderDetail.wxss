/* pages/work/outboundOrderDetail.wxss */
.contain {
  font-size: 28rpx;
}
.contain_title{
  margin: 10rpx 20rpx;
}
.contain_item {
  background: white;
  border-radius: 10px;
  padding: 5px;
  margin: 10px 10px;
}

.item_image {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: start;
  border-bottom: 1px solid #E5E5E5;
}

.item_contain {
  margin:10px 0px;
}

.image {
  width: 150rpx;
  height: 150rpx;
  padding: 20rpx;
  background-color: #E5E5E5;
  margin: 10px;
}

.text {
  padding: 10rpx;
}

.item_product {
  display: flex;
  flex-direction: row;
  /* align-items: center;
  justify-content: center; */
  width: 100%;
  padding:5rpx 0rpx;
}

.text1 {
  width: 47%;
  word-wrap: break-all;
  word-break: break-all;
  border: 1px solid #E5E5E5;
  padding: 5px;
  /* text-align: center; */
}

.text2 {
  width: 13%;
  text-align: center;
  border: 1px solid #E5E5E5;
  padding: 5px;
  /* border-bottom: 1px solid #666666; */
}
.text3 {
  width: 25%;
  text-align: center;
  border: 1px solid #E5E5E5;
  padding: 5px;
  /* border-bottom: 1px solid #666666; */
}

.pos_fixed {
  width: 100%;
  height: 100rpx;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0px 5px 30px 0px rgba(225, 228, 235, 1);
  font-size: 30rpx;
  position: fixed;
  bottom: 0rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.confirm_btn{
  height: 100rpx;
  color: white;
  line-height: 100rpx;
  vertical-align: middle;
  background: #CCCCCC;
  padding:0px 20px;
}
.number{
  padding:0px 20px;
}