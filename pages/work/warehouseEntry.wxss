}

.title_bg {
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
  padding: 15rpx 0rpx;
  justify-content: space-between;
}

.left_bg {
  display: flex;
  justify-content: flex-start;
  background-color: #fff;
  margin: 5rpx 20rpx;
  border-radius: 10rpx;
}

.title {
  color: #1A50B2;
