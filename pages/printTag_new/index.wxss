.page-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  box-sizing: border-box;
  border-bottom: 2rpx solid #EEE;
  padding: 30rpx 0;
}

.devices-summary {
  padding: 10rpx;
  font-size: 30rpx;
}

.device-list {}

.device-item {
  border-bottom: 1rpx solid #EEE;
  padding: 10rpx;
  color: #666;
}

.device-item-hover {
  background-color: rgba(0, 0, 0, .1);
}

.btn-area {
  box-sizing: border-box;
  width: 100%;
  padding: 0 30rpx;
  margin: 30rpx 0;
}

.connected-area {
  font-size: 22rpx;
}

.connected-info {}

.input-area {
  background: #fff;
  margin-top: 10rpx;
  width: 100%;
}

.input {
  font-size: 28rpx;
  height: 2.58823529em;
  min-height: 2.58823529em;
  line-height: 2.58823529em;
  padding: 10rpx;
}

/** 优化样式 **/
.container_bluetooth {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
}

.bluetooth_nav {
  width: 100%;
  position: fixed;
  z-index: 10000;
}

.search_box {
  width: 100%;
  display: flex;
  justify-content: space-around;
  align-items: center;
  background: #fff;
  border-top: 2rpx solid #F1F3F5;
  height: 120rpx;
  text-align: center;
  font-size: 26rpx;
  color: #6B6B6B;
  /* position: fixed;
  z-index: 10000; */
}

.search_box view:nth-child(1) {
  flex: 3;
}


.search_box view:nth-child(2) {
  flex: 1;
  margin-right: 10rpx;
}

.findPrinter_Btn {
  height: 80rpx;
  line-height: 80rpx;
  background-color: #1A50B2;
  color: #ffffff;
  border-radius: 8rpx;
  text-align: center;
}

.search_box view:nth-child(3) {
  flex: 1;
  margin-right: 10rpx;
}

.stopFindPrinter_Btn {
  height: 80rpx;
  line-height: 80rpx;
  border: 2rpx solid #F1F3F5;
  color: #1A50B2;
  border-radius: 8rpx;
  text-align: center;
}


/** 下拉框 **/
.classify-kuangjia {
  /* height: 50rpx;
  display: flex;
  justify-content: center; */
}

.classify-kuangjia2 {
  /* margin: 0 20rpx; */
  margin-left: 20rpx;
  margin-right: 10rpx;
}

.classify {
  position: relative;
  height: 80rpx;
  line-height: 80rpx;
  border: 2rpx solid #F1F3F5;
  border-radius: 8rpx;
}

.classify-tupian {
  width: 20rpx;
  height: 20rpx;
  position: absolute;
  right: 20rpx;
  top: 30rpx;
}

.select_box {
  width: 100%;
  background-color: #fff;
  position: absolute;
  /* right: 0; */
  top: 85rpx;
  z-index: 100;
  /* animation: myclassify 1s; */
  /* overflow: hidden; */
  overflow-y: scroll;
}

.h600 {
  height: 600rpx;
}

.printer_name {
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  display: inline-block;
  width: 300rpx;
}

.select_one {
  height: 80rpx;
  position: relatiave;
  line-height: 80rpx;
  border-top: 2rpx solid#F1F3F5;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  padding: 0 20rpx;
}

/* 下拉过度效果 */
@keyframes myclassify {
  from {
    height: 0rpx;
  }

  to {
    height: 210rpx;
  }
}


/**  底部 **/
.footer {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
}

.print_disabled {
  text-align: center;
  flex: 1;
  background-color: #CCCCCC;
  color: #ffffff;
}


.print {
  flex: 1;
  background-color: #1A50B2;
  text-align: center;
  color: #ffffff;
}