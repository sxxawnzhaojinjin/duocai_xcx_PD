/**app.wxss**/
page {
  background: #F1F4F7;
  width: 100%;
  height: 100%;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}

.btnColor {
  background-color: #1A50B2;
}

.item_icon {
  width: 36rpx;
  height: 36rpx;
  margin-left: 20rpx;
}

.common_button {
  font-size: 30rpx;
  bottom: 100rpx;
  position: fixed;
  background-color: #1A50B2;
  width: 80%;
  height: 80rpx;
  border-radius: 50rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  margin-left: 10%;
  color: #FFF;
  bottom: 10rpx;
  z-index: 2000;

}

.common_bottom_button {
  font-size: 30rpx;
  bottom: 100rpx;
  position: fixed;
  background-color: #1A50B2;
  width: 100%;
  height: 80rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  color: #FFF;
  bottom: 0;
  z-index: 2000;
}


/** 选中对号 **/
.word {
  text-align: center;
  margin: auto;
  position: absolute;
  display: inline-block;
  width: 30rpx;
  right: 0;
  top: -60rpx;
  color: #fff;
  font-size: 24rpx;
}

.triangle-topright {
  width: 0;
  height: 0;
  float: right;
  border-top: 60rpx solid #F19F4A;
  border-left: 60rpx solid transparent;
  position: absolute;
  top: 0;
  right: 0;
}

/** 底部 **/
.bottom_botton {
  display: flex;
  width: 100%;
  background-color: #fff;
  position: fixed;
  bottom: 0;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
}

.bottom_botton_left {
  flex: 1;
  flex: 0 0 80%;
}

.bottom_botton_right {
  flex: 1;
  flex: 0 0 20%;
  background-color: #1A50B2;
  color: #fff;
  font-size: 28rpx;
}

.container_box {
  width: 100%;
  height: 100%;
}