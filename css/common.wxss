.classify {
  position: relative;
  background: #F3F3F3;
  border-radius: 30rpx;
  height: 60rpx;
  line-height: 60rpx;
}

.classify-tupian {
  width: 20rpx;
  height: 20rpx;
  position: absolute;
  right: 20rpx;
  top: 18rpx;
}

.select_box {
  width: 100%;
  background-color: #fff;
  position: absolute;
  right: 0rpx;
  top: 65rpx;
  z-index: 100;
  /* animation: myclassify 1s; */
  /* overflow: hidden; */
}

.select_one {
  height: 60rpx;
  position: relatiave;
  line-height: 60rpx;
  border-bottom: 1px solid#F1F3F5;
}

/* 下拉过度效果 */
@keyframes myclassify {
  from {
    height: 0rpx;
  }

  to {
    height: 210rpx;
  }
}


/** 无数据 **/
.noData_box {
  width: 100%;
  height: 100%;
}

.noData_info {
  width: 100%;
  text-align: center;
  position: absolute;
  top: 50%;
  /*偏移*/
  transform: translateY(-50%);
}

.noData_info view:nth-child(1) {
  height: 200rpx;
}

.noData_info view:nth-child(2) {
  margin: 40rpx 0;
  font-size: 32rpx;
}

.noData_img {
  width: 200rpx;
  height: 200rpx;
}

.noData_text {
  color: #999999;
  font-size: 28rpx;
}