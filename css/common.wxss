/** 搜索 **/
.search_box {
  width: 100%;
  display: flex;
  justify-content: space-around;
  align-items: center;
  background: #fff;
  border-top: 2rpx solid #F1F3F5;
  height: 90rpx;
  text-align: center;
  position: fixed;
  z-index: 10000;
}

.search_box view:nth-child(1) {
  flex: 2;
  font-size: 28rpx;
  color: #6B6B6B;
}

.search_box view:nth-child(2) {
  flex: 4;
}

.search_box view:nth-child(3) {
  flex: 1;
}

.search_input {
  background-color: #F3F3F3;
  border-radius: 30rpx;
  height: 60rpx;
  text-align: left;
  padding: 0 30rpx;
  font-size: 28rpx;
  margin-left: 10rpx;
  margin-right: 20rpx;
}

.placeholder {
  color: #D5D5D5;
}

.search_img {
  width: 50rpx;
  height: 50rpx;
  vertical-align: middle;
}

